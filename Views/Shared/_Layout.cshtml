<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebApplication1</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
    <!-- Custom CSS -->
    <link href="/css/Main.css" rel="stylesheet" />
    <link href="/css/weather.css" rel="stylesheet" />
    <link href="/css/posts_table.css" rel="stylesheet" />
    <link href="/css/Profile.css" rel="stylesheet" />
    <link href="/css/layout.css" rel="stylesheet" />
</head>
<body>
    <header>
        <!-- Sidebar -->
        <div class="sidebar">
            <div class="logo">
                <img src="/image/main-logo.png" alt="Krishi Bazar Logo">
            </div>
            <ul>
                <li>
                    <a href="#" class="active" id="krishiBazarLink"><i class="bi bi-shop"></i> Krishi Bazar</a>
                    <ul class="submenu" id="krishiBazarSubmenu">
                        <li><a asp-controller="Home" asp-action="Farmer"><i class="bi bi-person"></i> Farmer</a></li>
                        <li><a asp-controller="Home" asp-action="Driver"><i class="bi bi-truck"></i> Driver</a></li>
                        <li><a asp-controller="Home" asp-action="Seller"><i class="bi bi-shop"></i> Seller</a></li>
                        <li><a asp-controller="Home" asp-action="Buyer"><i class="bi bi-basket"></i> Buyer</a></li>
                    </ul>
                </li>

                <li>
                    <a href="#" id="krishiPostsLink"><i class="bi bi-file-post"></i> Krishi Posts</a>
                    <ul class="submenu" id="krishiPostsSubmenu">
                        <li><a asp-area="" asp-controller="Home" asp-action="#"><i class="bi bi-person"></i> Farmer Posts</a></li>
                        <li><a asp-area="" asp-controller="Home" asp-action="#"><i class="bi bi-truck"></i> Driver Posts</a></li>
                        <li><a asp-area="" asp-controller="Home" asp-action="#"><i class="bi bi-shop"></i> Seller Posts</a></li>
                        <li><a asp-area="" asp-controller="Home" asp-action="#"><i class="bi bi-basket"></i> Buyer Posts</a></li>
                    </ul>
                </li>
                <li>
                    <a asp-area="" asp-controller="Home" asp-action="Weather"><i class="bi bi-cloud-sun"></i> Weather</a>
                    
                </li>
            </ul>
        </div>

        
    </header>

    <!-- Main Content -->
    <div class="content">
        <!-- Header -->
        <div class="header d-flex justify-content-end align-items-center p-2 bg-light">
            <div class="profile dropdown">
                <img src="/image/user.jpg"
                     alt="User"
                     class="rounded-circle"
                     style="width: 50px; height: 50px; cursor: pointer;"
                     data-bs-toggle="dropdown"
                     aria-expanded="false">
                <ul class="dropdown-menu dropdown-menu-end">
                    <li><a class="dropdown-item profile-item" href="/Profile.aspx"><i class="bi bi-person-circle me-2"></i>Profile</a></li>
                    <li>
                        <a class="dropdown-item logout-item text-black" href="#" onclick="openLogoutModal()">
                            <i class="bi bi-box-arrow-right"></i> Logout
                        </a>
                    </li>
                </ul>
            </div>
        </div>

        <!-- Main Section -->
        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>

        <!-- Footer -->
        <footer class="border-top footer text-muted">
            <div class="container">
                &copy; 2025 - Krishi Bazar - <a href="#">Privacy</a>
            </div>
        </footer>

    </div>

      

       

 


    <!-- Logout Confirmation Modal -->
    <div class="modal fade" id="logoutModal" tabindex="-1" aria-labelledby="logoutModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="logoutModalLabel">Confirm Logout</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Are you sure you want to log out?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <a href="logout_loding.aspx" class="btn btn-outline-danger">Logout</a>
                </div>
            </div>
        </div>
    </div>

   

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Custom JS -->
    <script>
        function openLogoutModal() {
            var logoutModal = new bootstrap.Modal(document.getElementById('logoutModal'));
            logoutModal.show();
        }

        const sidebarLinks = document.querySelectorAll('.sidebar a');

        sidebarLinks.forEach(link => {
            link.addEventListener('click', function () {
                sidebarLinks.forEach(item => item.classList.remove('active'));
                this.classList.add('active');
            });
        });

        document.getElementById("krishiBazarLink").addEventListener("click", function () {
            const submenu = document.getElementById("krishiBazarSubmenu");
            submenu.classList.toggle("show");
        });

        document.getElementById("krishiPostsLink").addEventListener("click", function () {
            const submenu = document.getElementById("krishiPostsSubmenu");
            submenu.classList.toggle("show");
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
