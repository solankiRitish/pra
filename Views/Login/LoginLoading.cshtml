@{
    Layout = null;
    ViewData["Title"] = "Logging In...";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Logging In...</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body {
            background-color: #f8f9fa;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .login-container {
            text-align: center;
            background: white;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        }

        .spinner-border {
            width: 3rem;
            height: 3rem;
            color: limegreen;
        }

        .fade-out {
            animation: fadeOut 2s ease-in-out forwards;
        }
    </style>

    <script>
        setTimeout(function () {
            document.getElementById("loginBox").classList.add("fade-out");
            setTimeout(function () {
                window.location.href = "/Home/Farmer"; // Redirect to Farmer Dashboard
            }, 2000); // Redirect after fade-out
        }, 3000);
    </script>
</head>
<body>

    <div class="login-container" id="loginBox">
        <div class="spinner-border" role="status"></div>
        <h2 class="mt-3 text-success">Logging in...</h2>
        <p>Welcome back to <strong>KrishiSetu</strong>! 🌿</p>
        <p>Please wait while we log you in.</p>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
