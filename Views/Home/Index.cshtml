@{
    Layout = null;
    ViewData["Title"] = "Login";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>KrishiSetu Login</title>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script> <!-- SweetAlert2 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <link href="/css/login_or_register.css" rel="stylesheet" />
</head>
<body>
    <div class="login-container">
        <img src="/image/main-logo.png" alt="Logo" style="width: 20rem; margin-bottom: 10px;" />
        <h1>Welcome to Krishisetu!</h1>

        @if (ViewData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">@ViewData["ErrorMessage"]</div>
        }

        <form method="post" asp-controller="Login" asp-action="Index" asp-action="LoginSuccess">
            <div class="mb-3">
                <label for="username" class="form-label">Your Mobile Number or Username</label>
                <input type="text" id="username" class="form-control" placeholder="Enter your Mobile Number or Username" name="Username" required />
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input type="password" id="password" class="form-control" placeholder="Enter Password" name="Password" required />
            </div>
            <button type="submit" class="btn btn-primary">Sign In</button>
            <a asp-controller="Home" asp-action="Register" class="d-block mt-3">New to our platform? Create an account</a>
        </form>
    </div>
</body>
</html>
